<AnchorPane prefHeight="350.0" prefWidth="370.0" style="-fx-background-color: #A0522D;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="knightswap.gui.controllers.WelcomeController">
