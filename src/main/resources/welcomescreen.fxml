            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <TextField fx:id="playerNameTextField" promptText="e.g. Roland" />
        <Button onAction="#handleStartGameButton" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-background-color: #DEB887; -fx-text-fill: #A0522D;" text="Start Game" />
